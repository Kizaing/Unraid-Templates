<?xml version="1.0"?>
<Container version="2">
  <Name>KavitaEmail</Name>
  <Repository>jvmilazz0/kavitaemail</Repository>
  <Registry>https://hub.docker.com/r/kizaing/kavitaemail</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/112111-support-kizaing-kavita/</Support>
  <Project>https://github.com/Kareadita/KavitaEmail</Project>
  <Overview>This is a simple email relay server that handles emails from Kavita application. By default, Kavita installations will use the Kavita hosted email service. However, if a user wants to setup their own SMTP service, then they can run their own instance of this microService.</Overview>
  <Category>Network:Other</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/Kizaing/Unraid-Templates/master/kavitaemail-unraid.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/Kareadita/Kavita/develop/UI/Web/src/assets/icons/android-chrome-192x192.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1683427464</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="SMTP Relay Port" Target="5003" Default="5003" Mode="tcp" Description="" Type="Port" Display="always" Required="false" Mask="false">5003</Config>
  <Config Name="Config Path" Target="/app/config" Default="/mnt/user/appdata/KavitaEmail" Mode="rw" Description="" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/KavitaEmail</Config>
</Container>
